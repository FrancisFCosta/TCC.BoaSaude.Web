@model ListagemPrestadoresModel

@{
    ViewData["Title"] = "View";
}

<div id="filtro-listagem-veiculo">
    <div class="row">
        <div class="col-md-12 section-header" style="text-align: left; border-bottom: 1px solid; border-bottom-color: #eaeaea; padding-bottom:10px;">
            <h3 class="title">
                Listagem de Prestadores
            </h3>
        </div>
    </div>
</div>
<br />
<br />

<div class="row">
    <div class="form-group">
        <div class="row">
            <div class="col-md-8" style="padding-top: 10%;">
                <div class="row">
                    <div class="col-md-4" style="vertical-align: middle;">
                        <label asp-for="Especialidade" class="control-label">Especialidade</label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Especialidade" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="padding-top: 10%;">
                    <button href="#" id="filtro-data" class="btn btn-info" onclick="aoClicarEmFiltrar();" style="padding-left: 5%;">
                        <span class="glyphicon glyphicon-star-empty">Filtrar</span>
                    </button>
                    <a href='@Url.Action("CadastrarPrestador", "CadastroPrestador")'>
                        <input type='button' class="btn btn-success" value='+Novo' />
                    </a>
            </div>
        </div>
    </div>
</div>
<br />
<br />

<div id="grid-listagem-luguel" style="overflow-x: scroll;">
    @Html.Partial("_GridPrestadores", Model)
</div>

<script>
    var URL_FILTRO_DATA = '@Url.Action("ListarPorPeriodo", "ListagemAluguel")';

    function aoClicarEmFiltrar() {
        var data = {
            periodoInicio: $('#PeriodoInicio').val(),
            periodoFinal: $('#PeriodoFinal').val()
        }
        chamadaGET(URL_FILTRO_DATA, data, ListarPorPeriodoSucesso);
    }

    function ListarPorPeriodoSucesso(data) {
        if (data) {
            $('#grid-listagem-luguel').html(data);
            $('#grid-listagem-luguel').load();
        }
    }
</script>

